@using PruebaTecnicaMarzan.Models

@model Order

@{
    ViewData["Title"] = "Detalles";
}

<h1 class="text-center text-capitalize">Detalles Clientes</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerID):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">
                    Producto
                </th>
                <th class="text-center">
                    Precio
                </th>
                <th class="text-center">
                    Cantidad
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var details in Model.OrderDetails)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => details.Product.Name)
                    </td>
                    <td class="text-center">
                        $@Html.DisplayFor(modelItem => details.Price)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => details.Amount)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col">
        <a class="btn btn-success w-100" asp-action="Edit" asp-route-id="@Model.ID">Editar</a>
    </div>
    <div class="col">
        <a class="btn btn-primary w-100" asp-action="Index">Ir a la lista</a>
    </div>
</div>

